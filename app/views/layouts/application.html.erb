<!DOCTYPE html>
<html>
<head>
  <title>TasksTest</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<div class="user_nav">
  <% if current_user %>
    Aangemeld als <%= link_to current_user.login, user_url(current_user) %>
      <%= link_to "Afmelden", log_out_url %>
  <% else %>
    <%= link_to "Aanmelden", log_in_url %> | <%= link_to "Create User", sign_up_url %>
  <% end %>
</div>

<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<%= yield %>

</body>
</html>
