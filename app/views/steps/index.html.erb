<h1>Listing steps</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Executer</th>
    <th>Self</th>
    <th>Superior</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @steps.each do |step| %>
  <tr>
    <td><%= step.name %></td>
    <td>
      <% unless step.executer.nil? %>
          <%= step.executer.login %>
      <% else %>
        Aanvrager
      <% end %>
    </td>
    <td><%= step.self %></td>
    <td><%= step.superior %></td>
    <td><%= link_to 'Show', task_step_url(step.task, step) %></td>
    <td><%= link_to 'Edit', edit_task_step_url(step.task, step) %></td>
    <td><%= link_to 'Destroy', [step.task, step], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

